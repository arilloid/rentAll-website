<div class="row form">
    <div class="col title">
        <h3>Sign-Up</h3>
        <p>Create your account by entering your email address and choosing your password</p>
    </div>
</div>
<div class="row form sign">
    <div class="col justify-content-center">
            <form method="post" action="/sign-up">
                <div class="p-3 pt-4">
                    <input type="text" class="form-control" name="firstName" id="first-name" placeholder="First Name" value="{{values.firstName}}">
                </div>
                {{#if validationMessages.firstName}}
                <h6><small>{{validationMessages.firstName}}</small></h6>
                {{/if}}
                <div class="p-3">
                    <input type="text" class="form-control" name="lastName" id="last-name" placeholder="Last Name" value="{{values.lastName}}">
                </div>
                {{#if validationMessages.lastName}}
                <h6><small>{{validationMessages.lastName}}</small></h6>
                {{/if}}
                <div class="p-3">
                    <input type="text" class="form-control" name="email" id="email" placeholder="Email" value="{{values.email}}">
                </div>
                {{#if validationMessages.email}}
                <h6><small>{{validationMessages.email}}</small></h6>
                {{/if}}
                <div class="p-3">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" value="{{values.password}}">
                </div>
                {{#if validationMessages.password}}
                <h6><small>{{validationMessages.password}}</small></h6>
                {{/if}}
                <button type="submit" value="Sign-Up" class="btn m-3">Submit</button>
            </form>
    </div>
</div>
